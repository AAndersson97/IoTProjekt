<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.SybilSimulator">
   <MenuBar layoutX="-1.0" layoutY="1.0" prefHeight="26.0" prefWidth="132.0">
     <menus>
       <Menu mnemonicParsing="false" text="File">
         <items>
           <MenuItem mnemonicParsing="false" text="Close" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Edit">
         <items>
           <MenuItem mnemonicParsing="false" text="Delete" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Help">
         <items>
           <MenuItem mnemonicParsing="false" text="About" />
         </items>
       </Menu>
     </menus>
   </MenuBar>
   <HBox layoutY="364.0" prefHeight="36.0" prefWidth="600.0">
      <children>
      
          <Button fx:id="createNode" onAction="#onCreateNode" prefHeight="27.0" prefWidth="96.0" text="Create Node">
            <HBox.margin>
               <Insets left="5.0" top="5.0" />
            </HBox.margin>
         </Button>
         <Button fx:id="createAttackNode" layoutX="15.0" layoutY="15.0" onAction="#onCreateAttackNode" prefHeight="27.0" prefWidth="142.0" text="Create Attack Node" textFill="#e50505">
            <HBox.margin>
               <Insets left="10.0" top="5.0" />
            </HBox.margin>
         </Button>
         <Button fx:id="simPacketsButton" layoutX="15.0" layoutY="15.0" onAction="#onSimPackets" prefHeight="27.0" prefWidth="115.0" text="Simulate Packets">
            <HBox.margin>
               <Insets left="40.0" top="5.0" />
            </HBox.margin>
         </Button>
         <Button fx:id="sybilAttack" layoutX="121.0" layoutY="15.0" onAction="#onStartSybilAttack" prefHeight="27.0" prefWidth="142.0" text="Start Sybil Attack" textFill="#c20202">
            <HBox.margin>
               <Insets left="40.0" top="5.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>

</AnchorPane>
